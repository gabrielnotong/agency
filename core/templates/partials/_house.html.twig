<div class="col col-md-3 col-lg-3 my-2">
    <div class="card">
        {% if house.imageName %}
            <img src="{{ vich_uploader_asset(house, 'imageFile') | imagine_filter('thumb360x230') }}" alt="" class="card-img-top w-100 h-auto">
        {% else %}
            <img src="/images/houses/empty.png" alt="" class="card-img-top w-100 h-auto">
        {% endif %}
        <div class="card-body">
            <h5 class="card-title text-primary mb-2">
                <a href="{{ path('houses_show', {slug: house.slug}) }}">
                    {{ house.title }}
                </a>
            </h5>
            <p class="card-text">{{ house.description | nl2br }}</p>
            <p class="card-subtitle mb-2 text-muted">{{ house.surface }} mÂ²
                - {{ house.address ~ '(' ~ house.zipCode ~')' }}</p>
            <h3 class="text-primary mt-2">{{ house.price | format_currency('EUR', locale='fr') }}</h3>
        </div>
    </div>
</div>