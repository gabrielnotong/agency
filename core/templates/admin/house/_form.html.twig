{{ form_start(form) }}
<div class="row">
    <div class="col-6">
        <div class="form-group">
            {{ form_row(form.title) }}
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            {{ form_row(form.description) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-3">
        <div class="form-group">
            {{ form_row(form.surface) }}
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            {{ form_row(form.rooms) }}
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            {{ form_row(form.bedrooms) }}
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            {{ form_row(form.floor) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div class="form-group">
            {{ form_row(form.price) }}
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            {{ form_row(form.heat) }}
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            {{ form_row(form.options) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div class="form-group">
            {{ form_row(form.city) }}
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            {{ form_row(form.address) }}
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            {{ form_row(form.zipCode) }}
        </div>
    </div>
</div>
<div class="row align-items-end">
    <div class="col-4">
        {{ form_row(form.imageFile) }}
    </div>
    <div class="col-8">
        {% if house is defined and house.imageName %}
            <img src="{{ vich_uploader_asset(house) | imagine_filter('thumb100x64') }}" alt="{{ house.imageName }}">
        {% endif %}
    </div>
</div>
<button class="btn btn-success" type="submit">{{ btnText }}</button>
<a class="btn btn-secondary" href="{{ path('admin_houses_index') }}">Back to the list</a>
{{ form_end(form) }}